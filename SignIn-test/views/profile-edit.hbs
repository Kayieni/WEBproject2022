                    <div class="card mb-4">
                        <div class="card-header">Edit username</div>
                        <div class="card-body">
                            <form action="/auth/updatename" method="POST">
                                <!-- Form Group (username)-->
                                <div class="mb-3 form-group">
                                    <label class="small mb-1 control-label" for="username"> Enter new username</label>
                                    <input class="form-control" id="username" type="text" placeholder="Enter new username" name="username" value="{{session.inputData.username}}">
                                </div>
                                <!-- Form Row-->
                                {{!-- <div class="row gx-3 mb-3 form-group"> --}}
                                <!-- Form Group (password)-->
                                <div class="mb-3 form-group">
                                    <label class="small mb-1 control-label" for="oldpassword">Enter your current password</label>
                                    <div class="col-md-6 ">
                                        <input class="form-control input-md" id="oldpassword" type="password" name='oldpassword'
                                            placeholder="Enter your old password">
                                    </div>
                                </div>
                                <!-- Save changes button-->
                                <button class="btn btn-primary" type="submit">Change Username</button>
