        <a href="#upper" aria-current="page" class="fixed-plugin-button text-dark position-fixed px-3 py-2">
            <i class="material-icons py-2">arrow_upward</i>
        </a>
    </div>

        <!-- Modal -->
    <div class="modal fade" id="deleteModal" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="exampleModalLabel">Delete All Data</h5>
                    <button type="button" class="close btn btn-outline-dark" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="h2">Are you sure you want to delete <span class="text-danger">ALL DATA</span> ?</h2>
                    <h5 class="h5">After that there is not way back, and you will need to
                    upload a file with new data in order for the application to work properly.</h5> 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                    <form action="/auth/delete_pois" method="POST">
                        <input type="hidden" name="delete" id="" class="delete">
                        <button class="btn btn-danger" type="submit"data-toggle="modal" data-target="#deleteModal">
                            <i class="large material-icons opacity-10 navbar-brand-img h-100">delete_forever</i>
                            Delete All POIs</button>
                    </form>
                    {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
                </div>
            </div>
        </div>
