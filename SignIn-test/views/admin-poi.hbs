        {{!-- main body elements , right part --}}


        {{!-- main drag and drop files --}}
        <div class="container-drag">
            {{!-- header of drag and drop --}}
            <div class="header-section">
                {{#if message}}
                    <h4 class="alert alert-success mt-4">{{message}}</h4> 
                {{/if}}
                <h1>Upload New Store Data</h1>
                <p>Upload files for the local stores available in your area, in .json or .xml format.</p>
                <p>JSON and XML files are allowed.</p>
            </div>
            {{!-- drop section for drag or upload button --}}
            <div class="drop-section">
                <div class="col">
                    <div class="cloud-icon">
                        <img src="images/logos/cloud.png" alt="cloud-icon">
                    </div>
                    <span>Drag & Drop your files here</span>
                    <span>OR</span>
                    <button class="file-selector">Browse Files</button>
                    <form enctype="multipart/form-data" action="/auth/update_pois" method="POST">
                        <input type="file" name="file" id="" class="file-selector-input" multiple>    
                        <div class="list-submit">
                        </div>
                    </form>
                </div>
                <div class="col">
                    <div class="drop-here">Drop here</div>
                </div>
            </div>
            {{!-- list after upload --}}
            <div class="list-section">
                <div class="list-title">Upload Stores</div>
                <div class="list">
                </div>
            </div>
            <button class="btn btn-outline-danger" type="button" data-toggle="modal" data-target="#deleteModal">
                <i class="large material-icons opacity-10 navbar-brand-img h-100">delete_forever</i>Delete All Data
            </button>

        </div>



